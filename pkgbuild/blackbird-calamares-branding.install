 
post_install() {
    sed -e 's|^Name=.*|Name=Install Blackbird OS|' -i usr/share/applications/calamares.desktop
    sed -e 's|^Comment=.*|Comment=Install the operating system to disk|' -i usr/share/applications/calamares.desktop
    sed -e 's|^Icon=.*|Icon=calamares-blackbird|' -i usr/share/applications/calamares.desktop
}
